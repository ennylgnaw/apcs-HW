public class LList implements List {

    //instance vars
    private LLNode _beg;
    private LLNode _end;
    private int _size;

    //constructor
    public LList() {
	_beg = null;
	_end = null;
	_size = 0;
    }

    public void add( String x ) {
	if ( _beg = null )
	    _beg = new LLNode( x );
	else {
	    LLNode i = _beg;
	    while( i.getNext() != null )
		i = i.getNext();
	    LLNode newNode = i.getNext();
	    newNode.setCargo(x);
	    _end = newNode;
	}
	_size += 1;
    }

    public String get( int i ) {
	if ( _beg == null )
	    throw new IndexOutOfBoundsException();
	LLNode temp = _beg;
	for( int x = 0; x < i; x++ )
	    temp = temp.getNext();
	if ( temp == null )
	    throw new IndexOutOfBoundsException();
	return temp.getCargo();
    }
}
